<body id="edit-user">
  <div class="x-up-form">
  
    <h5>Edit <%= resource_name.to_s.humanize %></h5>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "edit-form", method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :username, class: "input-field", placeholder: "Username", autofocus: true %>
      </div>

      <div class="field">
        <%= f.email_field :email, class: "input-field", placeholder: "Email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div id="leave-blank" class="field">
        <div>Leave blank if you do not want to overwrite</div>
      </div>

      <div class="field">
        <%= f.password_field :password, class: "input-field", placeholder: "Password", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, class: "input-field", placeholder: "Confirm Password", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.submit "Update", id: "submit-btn" %>
      </div>
    <% end %>

    <div class="field">
      <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
      <%= link_to "Back", :back %>
    </div>
  </div>
</body>
